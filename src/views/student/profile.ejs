<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>My Profile - AssignmentChecker</title>
    <style>
      :root {
        --radius: 0.65rem;
        --background: oklch(1 0 0);
        --foreground: oklch(0.141 0.005 285.823);
        --card: oklch(1 0 0);
        --card-foreground: oklch(0.141 0.005 285.823);
        --primary: oklch(0.541 0.281 293.009);
        --primary-foreground: oklch(0.969 0.016 293.756);
        --secondary: oklch(0.967 0.001 286.375);
        --secondary-foreground: oklch(0.21 0.006 285.885);
        --muted: oklch(0.967 0.001 286.375);
        --muted-foreground: oklch(0.552 0.016 285.938);
        --destructive: oklch(0.577 0.245 27.325);
        --border: oklch(0.92 0.004 286.32);
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
          Oxygen, Ubuntu, Cantarell, sans-serif;
        background: var(--background);
        color: var(--foreground);
        line-height: 1.6;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 40px 32px;
      }

      .page-header h1 {
        font-size: 32px;
        font-weight: 700;
        color: var(--foreground);
        margin-bottom: 32px;
      }

      .profile-section {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 32px;
        margin-bottom: 20px;
      }

      .profile-header {
        display: flex;
        gap: 24px;
        align-items: center;
        margin-bottom: 32px;
      }

      .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: var(--primary);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary-foreground);
        font-weight: 700;
        font-size: 32px;
        overflow: hidden;
        flex-shrink: 0;
      }

      .avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .profile-info {
        flex: 1;
      }

      .profile-name {
        font-size: 24px;
        font-weight: 700;
        color: var(--foreground);
        margin-bottom: 4px;
      }

      .profile-email {
        font-size: 14px;
        color: var(--muted-foreground);
        margin-bottom: 8px;
      }

      .profile-role {
        display: inline-block;
        padding: 6px 12px;
        background: var(--primary);
        color: var(--primary-foreground);
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
      }

      .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 24px;
      }

      .info-item {
        padding: 16px;
        background: var(--secondary);
        border-radius: var(--radius);
        border: 1px solid var(--border);
      }

      .info-label {
        font-size: 12px;
        font-weight: 600;
        color: var(--muted-foreground);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 6px;
      }

      .info-value {
        font-size: 16px;
        font-weight: 600;
        color: var(--foreground);
      }

      .section-title {
        font-size: 16px;
        font-weight: 700;
        color: var(--foreground);
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .section-title::before {
        content: '';
        width: 3px;
        height: 20px;
        background: var(--primary);
        border-radius: 1px;
      }

      .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
      }

      .stat-box {
        padding: 16px;
        background: var(--secondary);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        text-align: center;
      }

      .stat-number {
        font-size: 24px;
        font-weight: 800;
        color: var(--primary);
      }

      .stat-label {
        font-size: 12px;
        color: var(--muted-foreground);
        margin-top: 4px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .actions {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-top: 24px;
      }

      .btn {
        padding: 12px 20px;
        border-radius: var(--radius);
        border: none;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        text-align: center;
      }

      .btn-primary {
        background: var(--primary);
        color: var(--primary-foreground);
      }

      .btn-primary:hover {
        opacity: 0.9;
        transform: translateY(-1px);
      }

      .btn-secondary {
        background: var(--secondary);
        color: var(--secondary-foreground);
        border: 1px solid var(--border);
      }

      .btn-secondary:hover {
        background: var(--muted);
      }

      .btn-danger {
        background: transparent;
        color: var(--destructive);
        border: 1px solid var(--destructive);
      }

      .btn-danger:hover {
        background: var(--destructive);
        color: white;
      }

      @media (max-width: 1024px) {
        .container {
          max-width: 100%;
          padding: 32px 24px;
        }
      }

      @media (max-width: 768px) {
        .container {
          padding: 20px 16px;
        }

        .page-header h1 {
          font-size: 24px;
          margin-bottom: 20px;
        }

        .profile-header {
          flex-direction: column;
          align-items: flex-start;
          gap: 16px;
        }

        .avatar {
          width: 80px;
          height: 80px;
          font-size: 28px;
        }

        .profile-name {
          font-size: 20px;
        }

        .info-grid,
        .stats-grid {
          grid-template-columns: 1fr;
        }

        .actions {
          grid-template-columns: 1fr;
        }

        .profile-section {
          padding: 20px;
        }
      }

      @media (max-width: 480px) {
        .container {
          padding: 16px 12px;
        }

        .page-header h1 {
          font-size: 20px;
        }

        .profile-header {
          gap: 12px;
        }

        .avatar {
          width: 70px;
          height: 70px;
          font-size: 24px;
        }

        .profile-name {
          font-size: 18px;
        }

        .profile-email {
          font-size: 12px;
        }

        .profile-role {
          font-size: 11px;
          padding: 4px 10px;
        }

        .info-item,
        .stat-box {
          padding: 12px;
        }

        .info-label {
          font-size: 10px;
        }

        .info-value {
          font-size: 14px;
        }

        .stat-number {
          font-size: 20px;
        }

        .stat-label {
          font-size: 10px;
        }

        .btn {
          padding: 10px 16px;
          font-size: 13px;
        }

        .profile-section {
          padding: 16px;
          margin-bottom: 16px;
        }
      }
      /* Change Password Modal */
      .modal-overlay {
        position: fixed;
        inset: 0;
        background: oklch(0 0 0 / 0.45);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 1200;
        padding: 24px;
      }

      .modal-overlay.active {
        display: flex;
      }

      .modal {
        width: 100%;
        max-width: 480px;
        background: var(--card);
        color: var(--card-foreground);
        border: 1px solid var(--border);
        border-radius: calc(var(--radius) * 0.8);
        padding: 20px;
        box-shadow: 0 8px 30px oklch(0 0 0 / 0.25);
      }

      .modal-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 12px;
      }

      .modal-title {
        font-size: 18px;
        font-weight: 700;
        color: var(--foreground);
      }

      .modal-close {
        background: transparent;
        border: none;
        font-size: 18px;
        cursor: pointer;
        color: var(--muted-foreground);
      }

      .modal-body {
        display: grid;
        gap: 12px;
        margin-bottom: 12px;
      }

      .form-label {
        font-size: 13px;
        color: var(--muted-foreground);
        margin-bottom: 6px;
        display: block;
        font-weight: 600;
      }

      .form-control {
        width: 100%;
        padding: 10px 12px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: transparent;
        color: var(--foreground);
        font-size: 14px;
      }

      .form-help {
        font-size: 12px;
        color: var(--muted-foreground);
      }

      .modal-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
      }

      .input-error {
        color: var(--destructive);
        font-size: 12px;
        margin-top: 6px;
        display: none;
      }

      /* Flash messages */
      .flash {
        padding: 12px 16px;
        border-radius: 8px;
        margin: 12px 0;
        font-weight: 600;
        box-shadow: 0 6px 18px oklch(0 0 0 / 0.06);
      }

      .success {
        background: var(--primary);
        color: var(--primary-foreground);
        border: 1px solid oklch(0.6 0.12 293);
      }

      .error {
        background: oklch(1 0 0);
        color: var(--destructive);
        border: 1px solid var(--destructive);
      }

      @media (max-width: 480px) {
        .modal {
          padding: 16px;
        }
      }
    </style>
  </head>
  <body>
    <%- include('_sidebar') %>
    <div class="container">
      <div class="page-header">
        <h1>My Profile</h1>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
      <div class="flash error"><%= error %></div>
      <% } %> <% if (typeof success !== 'undefined' && success) { %>
      <div class="flash success"><%= success %></div>
      <% } %> <% if (user) { %>
      <div class="profile-section">
        <div class="profile-header">
          <div class="avatar">
            <% if (user.avatar) { %>
            <img src="<%= user.avatar %>" alt="<%= user.name %>" />
            <% } else { %> <%= user.name ? user.name.charAt(0).toUpperCase() :
            'U' %> <% } %>
          </div>
          <div class="profile-info">
            <div class="profile-name"><%= user.name || 'Student' %></div>
            <div class="profile-email"><%= user.email %></div>
            <span class="profile-role">Student</span>
          </div>
        </div>

        <div class="info-grid">
          <div class="info-item">
            <div class="info-label">Roll Number</div>
            <div class="info-value"><%= user.rollNumber || 'N/A' %></div>
          </div>
          <div class="info-item">
            <div class="info-label">Department</div>
            <div class="info-value">
              <% if (user.department && user.department.name) { %> <%=
              user.department.name %> <% } else { %> N/A <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="profile-section">
        <h2 class="section-title">Submission Statistics</h2>
        <div class="stats-grid">
          <div class="stat-box">
            <div class="stat-number">
              <%= typeof submittedCount !== 'undefined' ? submittedCount : 0 %>
            </div>
            <div class="stat-label">Submitted</div>
          </div>
        </div>
      </div>

      <div class="profile-section">
        <div class="actions">
          <button id="openChangePwd" type="button" class="btn btn-secondary">
            Change Password
          </button>
          <a
            href="/student/logout-all"
            class="btn btn-danger"
            onclick="return confirm('Are you sure? This will logout you from all devices.');"
            >Logout from All Devices</a
          >
        </div>
      </div>
      <!-- Change Password Modal -->
      <div id="changePwdModal" class="modal-overlay" aria-hidden="true">
        <div
          class="modal"
          role="dialog"
          aria-modal="true"
          aria-labelledby="changePwdTitle"
        >
          <div class="modal-header">
            <div id="changePwdTitle" class="modal-title">Change Password</div>
            <button
              type="button"
              class="modal-close"
              aria-label="Close modal"
              id="closeChangePwd"
            >
              âœ•
            </button>
          </div>
          <div class="modal-body">
            <form
              id="changePasswordForm"
              action="/student/change-password"
              method="POST"
            >
              <div>
                <label class="form-label" for="currentPassword"
                  >Current Password</label
                >
                <input
                  id="currentPassword"
                  name="oldPassword"
                  type="password"
                  class="form-control"
                  required
                />
              </div>

              <div>
                <label class="form-label" for="newPassword">New Password</label>
                <input
                  id="newPassword"
                  name="newPassword"
                  type="password"
                  class="form-control"
                  required
                />
              </div>

              <div>
                <label class="form-label" for="confirmPassword"
                  >Confirm New Password</label
                >
                <input
                  id="confirmPassword"
                  name="confirmPassword"
                  type="password"
                  class="form-control"
                  required
                />
                <div id="pwdError" class="input-error">
                  Passwords do not match.
                </div>
              </div>

              <div class="modal-actions" style="margin-top: 10px">
                <button
                  type="button"
                  class="btn btn-secondary"
                  id="cancelChangePwd"
                >
                  Cancel
                </button>
                <button type="submit" class="btn btn-primary">
                  Save Password
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <% } else { %>
      <div class="profile-section">
        <p style="text-align: center; color: var(--muted-foreground)">
          Profile information not found
        </p>
      </div>
      <% } %>
    </div>
    <script>
      ;(function () {
        const openBtn = document.getElementById('openChangePwd')
        const modal = document.getElementById('changePwdModal')
        const closeBtn = document.getElementById('closeChangePwd')
        const cancelBtn = document.getElementById('cancelChangePwd')
        const form = document.getElementById('changePasswordForm')
        const pwd = document.getElementById('newPassword')
        const confirm = document.getElementById('confirmPassword')
        const err = document.getElementById('pwdError')

        function openModal() {
          modal.classList.add('active')
          modal.setAttribute('aria-hidden', 'false')
          // focus first input
          setTimeout(
            () => document.getElementById('currentPassword').focus(),
            50
          )
        }

        function closeModal() {
          modal.classList.remove('active')
          modal.setAttribute('aria-hidden', 'true')
          err.style.display = 'none'
          form.reset()
        }

        openBtn && openBtn.addEventListener('click', openModal)
        closeBtn && closeBtn.addEventListener('click', closeModal)
        cancelBtn && cancelBtn.addEventListener('click', closeModal)

        // close on overlay click
        modal &&
          modal.addEventListener('click', function (e) {
            if (e.target === modal) closeModal()
          })

        // escape to close
        document.addEventListener('keydown', function (e) {
          if (e.key === 'Escape' && modal.classList.contains('active'))
            closeModal()
        })

        form &&
          form.addEventListener('submit', function (e) {
            if (pwd.value !== confirm.value) {
              e.preventDefault()
              err.style.display = 'block'
              confirm.focus()
              return false
            }
            // allow submission; server handles authentication and password change
          })
      })()
    </script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Assignments - AssignmentChecker</title>
    <style>
      :root {
        --radius: 0.65rem;
        --background: oklch(1 0 0);
        --foreground: oklch(0.141 0.005 285.823);
        --card: oklch(1 0 0);
        --card-foreground: oklch(0.141 0.005 285.823);
        --primary: oklch(0.541 0.281 293.009);
        --primary-foreground: oklch(0.969 0.016 293.756);
        --secondary: oklch(0.967 0.001 286.375);
        --secondary-foreground: oklch(0.21 0.006 285.885);
        --muted: oklch(0.967 0.001 286.375);
        --muted-foreground: oklch(0.552 0.016 285.938);
        --destructive: oklch(0.577 0.245 27.325);
        --border: oklch(0.92 0.004 286.32);
        --input: oklch(0.92 0.004 286.32);
        --chart-1: oklch(0.811 0.111 293.571);
        --chart-2: oklch(0.606 0.25 292.717);
        --chart-3: oklch(0.541 0.281 293.009);
        --chart-4: oklch(0.491 0.27 292.581);
        --chart-5: oklch(0.432 0.232 292.759);
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
          Oxygen, Ubuntu, Cantarell, sans-serif;
        background: var(--background);
        color: var(--foreground);
        line-height: 1.6;
      }

      .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 32px;
      }

      .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
        gap: 20px;
      }

      .page-header h1 {
        font-size: 32px;
        font-weight: 700;
        color: var(--foreground);
        margin: 0;
      }

      .header-actions {
        display: flex;
        gap: 12px;
      }

      .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border-radius: var(--radius);
        border: none;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
      }

      .btn-primary {
        background: var(--primary);
        color: var(--primary-foreground);
      }

      .btn-primary:hover {
        opacity: 0.9;
        transform: translateY(-1px);
      }

      .btn-secondary {
        background: var(--secondary);
        color: var(--secondary-foreground);
        border: 1px solid var(--border);
      }

      .btn-secondary:hover {
        background: var(--muted);
      }

      .filters {
        display: flex;
        gap: 12px;
        margin-bottom: 20px;
        flex-wrap: wrap;
      }

      .filter-btn {
        padding: 8px 16px;
        border: 1px solid var(--border);
        background: var(--card);
        border-radius: var(--radius);
        color: var(--foreground);
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .filter-btn:hover,
      .filter-btn.active {
        background: var(--primary);
        color: var(--primary-foreground);
        border-color: var(--primary);
      }

      .assignments-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
      }

      .assignment-card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 24px;
        transition: all 0.2s ease;
        display: flex;
        flex-direction: column;
      }

      .assignment-card:hover {
        border-color: var(--primary);
        box-shadow: 0 4px 16px rgba(84, 28, 145, 0.1);
        transform: translateY(-2px);
      }

      .assignment-header {
        margin-bottom: 16px;
      }

      .assignment-title {
        font-size: 16px;
        font-weight: 700;
        color: var(--foreground);
        margin-bottom: 4px;
      }

      .assignment-course {
        font-size: 13px;
        color: var(--muted-foreground);
      }

      .assignment-meta {
        display: flex;
        gap: 8px;
        margin-bottom: 16px;
        flex-wrap: wrap;
      }

      .meta-tag {
        display: inline-block;
        padding: 4px 10px;
        background: var(--secondary);
        color: var(--secondary-foreground);
        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
      }

      .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        margin-bottom: 16px;
      }

      .status-draft {
        background: var(--chart-5);
        color: var(--foreground);
      }

      .status-submitted {
        background: var(--chart-4);
        color: white;
      }

      .status-approved {
        background: var(--chart-2);
        color: white;
      }

      .status-rejected {
        background: var(--destructive);
        color: white;
      }

      .status-forwarded {
        background: var(--chart-1);
        color: var(--foreground);
      }

      .assignment-footer {
        margin-top: auto;
        padding-top: 16px;
        border-top: 1px solid var(--border);
      }

      .view-link {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s ease;
      }

      .view-link:hover {
        color: var(--chart-3);
        text-decoration: underline;
      }

      .action-btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 14px;
        border-radius: var(--radius);
        border: none;
        font-weight: 600;
        font-size: 13px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        margin-top: 12px;
      }

      .action-btn-submit {
        background: var(--primary);
        color: var(--primary-foreground);
      }

      .action-btn-submit:hover {
        opacity: 0.9;
        transform: translateY(-1px);
      }

      .action-btn-resubmit {
        background: var(--chart-2);
        color: white;
      }

      .action-btn-resubmit:hover {
        opacity: 0.9;
        transform: translateY(-1px);
      }

      .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: var(--secondary);
        border-radius: var(--radius);
        border: 1px dashed var(--border);
        grid-column: 1/-1;
      }

      .empty-state-icon {
        font-size: 64px;
        margin-bottom: 16px;
        opacity: 0.5;
      }

      .empty-state-title {
        font-size: 20px;
        font-weight: 700;
        color: var(--foreground);
        margin-bottom: 8px;
      }

      .empty-state-text {
        font-size: 14px;
        color: var(--muted-foreground);
        margin-bottom: 24px;
      }

      @media (max-width: 1024px) {
        .container {
          max-width: 100%;
          padding: 32px 24px;
        }

        .assignments-grid {
          grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        }
      }

      @media (max-width: 768px) {
        .container {
          padding: 20px 16px;
        }

        .page-header {
          flex-direction: column;
          align-items: flex-start;
          margin-bottom: 20px;
        }

        .page-header h1 {
          font-size: 24px;
        }

        .header-actions {
          width: 100%;
          flex-direction: column;
        }

        .btn {
          width: 100%;
          justify-content: center;
        }

        .assignments-grid {
          grid-template-columns: 1fr;
        }

        .filters {
          flex-direction: column;
        }

        .filter-btn {
          width: 100%;
        }
      }

      @media (max-width: 480px) {
        .container {
          padding: 16px 12px;
        }

        .page-header h1 {
          font-size: 20px;
        }

        .assignment-title {
          font-size: 14px;
        }

        .assignment-course {
          font-size: 12px;
        }

        .meta-tag {
          font-size: 11px;
          padding: 3px 8px;
        }

        .status-badge {
          padding: 4px 10px;
          font-size: 11px;
        }

        .view-link {
          font-size: 13px;
        }
      }
    </style>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body>
    <%- include('_sidebar') %>
    <div class="container">
      <div class="page-header">
        <h1>My Assignments</h1>
      </div>

      <% if (Array.isArray(assignments) && assignments.length) { %>
      <div class="assignments-grid">
        <% assignments.forEach(function(a){ %>
        <div class="assignment-card">
          <div class="assignment-header">
            <div class="assignment-title"><%= a.title %></div>
            <div class="assignment-course">
              <%= a.description || 'No description' %>
            </div>
          </div>

          <div class="assignment-meta">
            <span class="meta-tag"><%= a.category || 'General' %></span>
            <% if (a.faculty && a.faculty.name) { %>
            <span class="meta-tag"><%= a.faculty.name %></span>
            <% } %>
          </div>

          <% var st = (a.status||'draft').toString().toLowerCase(); %>
          <span class="status-badge status-<%= st %>">
            <%= st.charAt(0).toUpperCase() + st.slice(1) %>
          </span>

          <div class="assignment-footer">
            <a class="view-link" href="/student/assignments/<%= a._id %>"
              >View Details</a
            >
            <%if(a.status==='draft'){%>
              <button type="submit" onclick="submitAssignment('<%= a._id%>')" class="action-btn action-btn-submit">
                Submit
              </button>
            <%}else if(a.status==='rejected'){%>
            <a
              href="/student/assignments/<%= a._id %>/resubmit"
              class="action-btn action-btn-resubmit"
              >Resubmit</a
            >
            <%}%>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <div class="empty-state">
        <div class="empty-state-icon">ðŸ“­</div>
        <div class="empty-state-title">No Assignments</div>
        <div class="empty-state-text">
          You haven't uploaded any assignments yet
        </div>
        <a class="btn btn-primary" href="/student/assignments/upload"
          >Upload Your First Assignment</a
        >
      </div>
      <% } %>
    </div>
    <script>
      async function submitAssignment(id) {
        const result = await Swal.fire({
          title: 'Submit Assignment?',
          text: 'Once submitted, you cannot edit it unless it gets rejected.',
          icon: 'question',
          showCancelButton: true,
          confirmButtonText: 'Yes, submit',
          cancelButtonText: 'Cancel',
          confirmButtonColor: '#0f766e',
        })

        if (!result.isConfirmed) return

        try {
          const res = await fetch(`/student/assignments/${id}/submit`, {
            method: 'POST',
          })

          const data = await res.json()

          if (!data.success) {
            Swal.fire({
              title: 'Failed',
              text: data.message,
              icon: 'error',
            })
            return
          }

          Swal.fire({
            title: 'Submitted!',
            text: data.message,
            icon: 'success',
            timer: 1500,
            showConfirmButton: false,
          }).then(() => location.reload())
        } catch (error) {
          console.log(error)
          Swal.fire({
            title: 'Error',
            text: 'An error occurred while submitting your assignment! ðŸ‘½',
            icon: 'error',
          })
        }
      }
    </script>
  </body>
</html>

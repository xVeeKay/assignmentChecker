<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Uploaded Assignments</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 30px;
      background: #f9f9f9;
    }
    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    h2 {
      margin: 0;
      color: #333;
    }
    .back-btn {
      background: #14919b;
      color: white;
      border: none;
      padding: 10px 16px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 14px;
      text-decoration: none;
    }
    .back-btn:hover {
      background: #0f7a84;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
    }
    th, td {
      padding: 12px;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }
    th {
      background: #14919b;
      color: white;
    }
    a.file-link {
      color: #14919b;
      text-decoration: none;
      font-weight: bold;
    }
    a.file-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <div class="top-bar">
    <h2>üìÇ Uploaded Assignments</h2>
    <a href="/student/dashboard" class="back-btn">üè† Back to Home</a>
  </div>

  <% if (assignments && assignments.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Description</th>
          <th>File</th>
        </tr>
      </thead>
      <tbody>
        <% assignments.forEach(function(assign) { %>
          <tr>
            <td><%= assign.title %></td>
            <td><%= assign.category %></td>
            <td><%= assign.description %></td>
            <td>
              <a class="file-link" href="/uploads/<%= assign.filePath %>" target="_blank">View File</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No assignments uploaded yet.</p>
  <% } %>

</body>
</html>

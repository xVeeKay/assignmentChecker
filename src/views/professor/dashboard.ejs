<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Professor Dashboard</title>
    <style>
      :root {
        --bg: #f8faf9;
        --card: #ffffff;
        --muted: #6b7280;
        --primary: #064e3b; /* deep green for action */
        --accent1: #eef2ff; /* light purple */
        --accent2: #f0fdf4; /* light green */
        --accent3: #fff1f2; /* light red */
        --accent4: #eefcf6; /* mint */
      }

      html,
      body {
        height: 100%;
        margin: 0;
        font-family: Inter, system-ui, -apple-system, 'Segoe UI', Roboto,
          'Helvetica Neue', Arial;
      }
      body {
        background: var(--bg);
        color: #0f172a;
      }

      .layout {
        display: flex;
        min-height: 100vh;
      }

      /* left nav */
      .nav {
        width: 220px;
        padding: 28px 18px;
        background: #fff;
        border-right: 1px solid #eef2f7;
      }
      .nav h3 {
        margin: 0 0 18px;
        font-size: 18px;
      }
      .nav .nav-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
      }
      .nav a {
        display: block;
        padding: 10px 12px;
        border-radius: 8px;
        color: #0f172a;
        text-decoration: none;
        background: #fff;
        border: 1px solid transparent;
      }
      .nav a.active,
      .nav a:hover {
        background: #f3f4f6;
        border-color: #e6eef3;
      }

      /* main content */
      .main {
        flex: 1;
        padding: 28px;
      }
      .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 18px;
      }
      .header h1 {
        font-size: 22px;
        margin: 0;
      }

      .cards {
        display: flex;
        gap: 18px;
        margin-bottom: 22px;
      }
      .card {
        flex: 1;
        background: var(--card);
        padding: 18px;
        border-radius: 12px;
        box-shadow: 0 1px 0 rgba(15, 23, 42, 0.02);
        border: 1px solid #f1f5f9;
      }
      .card .label {
        font-size: 13px;
        color: var(--muted);
        margin-bottom: 8px;
      }
      .card .value {
        font-size: 28px;
        font-weight: 700;
        color: #0b1220;
      }

      /* color variants */
      .card.accent1 {
        background: var(--accent1);
      }
      .card.accent2 {
        background: var(--accent2);
      }
      .card.accent3 {
        background: var(--accent3);
      }
      .card.accent4 {
        background: var(--accent4);
      }

      .panel {
        background: var(--card);
        border-radius: 10px;
        padding: 14px 16px;
        border: 1px solid #eef2f7;
      }
      .panel h2 {
        margin: 0 0 12px;
        font-size: 16px;
      }

      .assignment-list {
        margin-top: 12px;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid #eef2f7;
      }
      .assignment-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 18px;
        border-bottom: 1px solid #f1f5f9;
        background: transparent;
      }
      .assignment-item:last-child {
        border-bottom: none;
      }
      .assignment-left {
        display: flex;
        flex-direction: column;
      }
      .assignment-title {
        font-weight: 600;
        color: #0b1220;
      }
      .assignment-meta {
        font-size: 13px;
        color: var(--muted);
        margin-top: 6px;
      }

      .actions {
        display: flex;
        gap: 10px;
        align-items: center;
      }
      .btn {
        padding: 8px 12px;
        border-radius: 8px;
        border: 1px solid transparent;
        cursor: pointer;
        font-size: 14px;
        text-decoration: none;
        display: inline-block;
      }
      .btn-review {
        background: var(--primary);
        color: #fff;
        border-color: rgba(0, 0, 0, 0.03);
      }
      .btn-details {
        background: #f8faf9;
        color: #0b1220;
        border: 1px solid #e6eef3;
      }

      .panel-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 4px;
      }
      .view-all {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
      }

      @media (max-width: 880px) {
        .cards {
          flex-direction: column;
        }
        .nav {
          display: none;
        }
        .layout {
          flex-direction: column;
        }
      }
    </style>
  </head>
  <body>
    <div class="layout">
      <aside class="nav">
        <h3>Navigation</h3>
        <div class="nav-list">
          <a href="/professor/dashboard" class="active">Dashboard</a>
          <a href="/professor/reviews">My Reviews</a>
          <a href="/professor/profile">Profile</a>
        </div>
      </aside>

      <main class="main">
        <div class="header">
          <h1>Professor Dashboard</h1>
        </div>

        <div class="cards">
          <div class="card accent1">
            <div class="label">Pending Reviews</div>
            <div class="value">
              <%= typeof pendingCount !== 'undefined' ? pendingCount : 0 %>
            </div>
          </div>

          <div class="card accent2">
            <div class="label">Approved</div>
            <div class="value">
              <%= typeof approvedCount !== 'undefined' ? approvedCount : 0 %>
            </div>
          </div>

          <div class="card accent3">
            <div class="label">Rejected</div>
            <div class="value">
              <%= typeof rejectedCount !== 'undefined' ? rejectedCount : 0 %>
            </div>
          </div>

          <div class="card accent4">
            <div class="label">Total Reviewed</div>
            <div class="value">
              <%= typeof totalReviewed !== 'undefined' ? totalReviewed : 0 %>
            </div>
          </div>
        </div>

        <div class="panel">
          <h2>Assignments Awaiting Review</h2>

          <div class="assignment-list">
            <% if (Array.isArray(assignments) && assignments.length) { %> <%
            assignments.forEach(function(a){ %>
            <div class="assignment-item">
              <div class="assignment-left">
                <div class="assignment-title">
                  <%= a.student.name %> - <%= a.title %>
                </div>
                <div class="assignment-meta">
                  Submitted: <%= a.submittedAt %> · <%= typeof a.daysPending !== 'undefined' ? a.daysPending : 0 %> days
                  pending
                </div>
              </div>

              <div class="actions">
                <a href="/professor/review/<%= a._id %>" class="btn btn-review"
                  >Review</a
                >
                <a
                  href="/professor/assignments/<%= a._id %>"
                  class="btn btn-details"
                  >Details</a
                >
              </div>
            </div>
            <% }) %> <% } else { %>
            <div class="assignment-item">
              <div class="assignment-left">
                <div class="assignment-title">
                  No assignments awaiting review
                </div>
              </div>
            </div>
            <% } %>
          </div>

          <div class="panel-footer">
            <div></div>
            <a href="/professor/assignments" class="view-all"
              >View All Assignments →</a
            >
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
